	// },
	// {
	// 	"key": "alt+shift+p",
	// 	"command": "workbench.action.chat.focusPrevious"
	// },

	// Live Grep
	{
		"key": "cmd+s",
		"command": "livegrep.search"
	},

	// Open / Close Sidebar
	{
		"key": "cmd+g",
		"command": "workbench.action.toggleSidebarVisibility"
	},

	// New file
	{
		"key": "cmd+n",
		"command": "explorer.newFile"
	},

	// New folder
	{
		"key": "cmd+m",
		"command": "explorer.newFolder"
	},

	// Close file
	{
		"key": "ctrl+x",
		"command": "workbench.action.closeActiveEditor"
	},

	// Tab to cycle through auto-complete options
	{
		"key": "tab",
		"command": "selectNextSuggestion",
		"when": "editorTextFocus && suggestWidgetMultipleSuggestions && suggestWidgetVisible"
	},

	// hjkl Navigation
	{
		"key": "ctrl+j",
		"command": "cursorDown"
	},
	{
		"key": "ctrl+k",
		"command": "cursorUp"
	},
	{
		"key": "ctrl+h",
		"command": "cursorLeft"
	},
	{
		"key": "ctrl+l",
		"command": "cursorRight"
	}
]

